{
  "name": "@repo/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "description",
  "module": "true",
  "publishConfig": {
    "directory": "packages/*"
  },
  "scripts": {
    "build:package": "esmo ./scripts/build.ts",
    "build:packages": "esmo ./scripts/build.ts --all",
    "format": "eslint --fix . --ext .js,.ts,.cjs,.mjs",
    "ci": "bumpp package.json packages/*/package.json --commit --push --tag",
    "release": "run-s build:packages format ci",
    "docs": "typedoc",
    "deploy": "esmo ./scripts/deploy.ts",
    "deploy:docs": "run-s docs deploy",
    "test:unit": "jest",
    "test:dts": "echo 'test:dts'",
    "test": "run-s test:unit test:dts"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "bumpp": "^7.1.1",
    "chalk": "^5.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "esmo": "^0.14.1",
    "inquirer": "^8.2.0",
    "jest": "^27.5.1",
    "jest-useragent-mock": "^0.1.1",
    "lint-staged": "^12.3.5",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^2.69.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typedoc-theme-category": "^1.0.7",
    "typescript": "^4.6.2",
    "zx": "^5.2.0"
  }
}
