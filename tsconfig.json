{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "rootDir": ".",
    "declaration": true,
    "paths": {
      "@repo/*": ["packages/*/src"]
    },
  },
  "typedocOptions": {
    "entryPoints": [
      "packages/algorithm/src/index.ts",
      "packages/types/src/index.ts",
      "packages/utils/src/index.ts"
    ],
    "out": "docs",
    "theme": "category"
  },
  "include": ["packages/*/src/"],
  "exclude": ["packages/*/dist", "packages/*/__test__"]
}
